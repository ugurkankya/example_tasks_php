{
    "name": "thomasbley/example_tasks_php",
    "description": "PHP Example Tasks REST API",
    "license": "MIT",
    "config": {
        "secure-http": true,
        "platform": {
            "php": "8.0"
        },
        "preferred-install" : "dist",
        "vendor-dir": "src/vendor"
    },
    "require": {
        "php": ">=8.0",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-xml": "*",
        "ext-xmlwriter": "*"
    },
    "autoload": {
        "psr-4": { "TaskService\\": "src/" }
    },
    "prefer-stable" : true,
    "require-dev": {
        "vimeo/psalm": "^4.4"
    }
}
