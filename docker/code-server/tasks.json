{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "phpcsfixer",
            "type": "shell",
            "command": "phpcsfixer-3000.phar fix --verbose --dry-run --diff --config phpcsfixer.conf",
            "options": {
                "cwd": "/var/www/tasks"
            },
            "presentation": {
                "showReuseMessage": false,
                "echo": false
            }
        },
        {
            "label": "psalm",
            "type": "shell",
            "command": "psalm-472.phar --no-cache",
            "options": {
                "cwd": "/var/www/tasks"
            },
            "presentation": {
                "showReuseMessage": false,
                "echo": false
            }
        },
        {
            "label": "psalm_taint",
            "type": "shell",
            "command": "psalm-472.phar --no-cache --taint-analysis",
            "options": {
                "cwd": "/var/www/tasks"
            },
            "presentation": {
                "showReuseMessage": false,
                "echo": false
            }
        },
        {
            "label": "phpunit",
            "type": "shell",
            "command": "phpunit-954.phar",
            "options": {
                "cwd": "/var/www/tasks"
            },
            "presentation": {
                "showReuseMessage": false,
                "echo": false
            }
        },
        {
            "label": "Tests",
            "group": "test",
            "dependsOn": [
                "phpcsfixer",
                "psalm",
                "psalm_taint",
                "phpunit"
            ],
            "dependsOrder": "sequence"
        }
    ]
}